<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Update Robots</title>
  </head>
  <body>
    {{ #users }}
    <form class="" action="/users/{{ _id }}/update" method="post">
      <input type="text" name="address_city" placeholder="City" value="{{ address_city }}">
      <input type="text" name="address_country" placeholder="Country" value=" {{ address_country }}">
      <input type="text" name="avatar" placeholder="Input Image Here"value="{{ avatar }}">
      <input type="text" name="company" placeholder="Company" value="{{ company }}">
      <input type="email" name="email" placeholder="Email" value="{{email}}">
      <input type="text" name="job" placeholder="Job" value="{{id}}">
      <input type="text" name="name" placeholder="Name" value="{{job}}">
      <input type="tel" name="phone" placeholder="Phone Number"value="{{name}}">
      <label for="">Skills</label>
      <div>
        <input type="checkbox" name="skills" value="programming">
        <label for="">Programming</label>
      </div>
      <div>
        <input type="checkbox" name="skills" value="repetitive-tasks">
        <label for="">Repetitive Tasks</label>
      </div>
      <div>
        <input type="checkbox" name="skills" value="following-instructions">
        <label for="">Following Instructions</label>
      </div>
      <div>
        <input type="checkbox" name="skills" value="attention-to-detail">
        <label for="">Atention to Detail</label>
      </div>
      <input type="text" name="university" placeholder="University" value="{{ university }}">
      <input type="text" name="username" placeholder="Username" value=" {{username}}">
      <button type="submit" name="button">ROBOT UPDATE</button>
    </form>
    {{ /users }}
  </body>
</html>
